{
	"compilerOptions": {
		"composite": true,
		"module": "system",
		"moduleResolution": "node",
		"target": "es2017",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"baseUrl": "./",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true,
		"incremental": true,
		"preserveConstEnums": true,
		"lib": [
			"dom",
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		]
	},
	"exclude": [
		"**/build/**/*.ts",
		"**/bundle/**/*.ts"
	]
}
